- model_class = Family
.page-header
	%h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
	%thead
		%tr
			%th= model_class.human_attribute_name(:id)
			%th= model_class.human_attribute_name(:_id)
			%th= model_class.human_attribute_name(:family_name)
			%th= model_class.human_attribute_name(:family_id)
			%th= model_class.human_attribute_name(:role_name)
			%th= model_class.human_attribute_name(:user_id)
			%th= model_class.human_attribute_name(:created_at)
			%th=t '.actions', :default => t("helpers.actions")
	%tbody
		- @families.each do |family|
			%tr
				%td= link_to family.id, family_path(family)
				%td= family._id
				%td= family.family_name
				%td= family.family_id
				%td= family.role_name				
				%td=l family.created_at unless family.created_at.nil?
				%td
					= link_to t('.edit', :default => t("helpers.links.edit")), edit_family_path(family), :class => 'btn btn-mini'
					= link_to t('.destroy', :default => t("helpers.links.destroy")), family_path(family), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_family_path, :class => 'btn btn-primary'
