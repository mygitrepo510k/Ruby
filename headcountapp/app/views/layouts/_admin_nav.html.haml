%a.btn.btn-navbar{:"data-toggle"=>"collapse", :"data-target"=>".nav-collapse"}
  %span.icon-th-list
= link_to "HeadCount", admin_path, :class => 'brand'
.nav-collapse.collapse
  %ul.nav.nav-justified
    - if current_page?(admin_path)
      %li.active
        = link_to "Home", admin_path
    - else
      %li
        = link_to "Home", admin_path

    %li
      = link_to "Users", admin_users_path  
    %li
      = link_to "Events", admin_events_path
    %li
      = link_to "Content", "#"
    %li
      = link_to "My Account", "#"
    %li.dropdown{id:'submenu2'}
      %a.dropdown-toggle{:href=>"#submenu2", :'data-toggle'=>"dropdown"} 
        Settings
        %b.caret
      %ul.dropdown-menu{:role=>"menu"}
        %li
          = link_to "APP Settings", "#"
        %li.last
          = link_to "...", "#"
  %ul.nav.pull-right
    %li
      = link_to "Log Out", destroy_user_session_path, :method => :delete
:css
  .nav-justified li:hover{
    background-color: #E6E6E6;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.125) inset;
    color: #555555;
    text-decoration: none;
  }
  ul.nav li.dropdown ul.dropdown-menu li{
    padding: 0px;
  }
  
  .dropdown-submenu .dropdown-menu{
    display: none !important;
  }
  .dropdown-submenu:hover .dropdown-menu{
    display: block !important;
  }
