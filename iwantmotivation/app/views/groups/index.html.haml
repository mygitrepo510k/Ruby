.row.groups-index-page
	.container
		- model_class = Group
		.page-header
			%h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
		%table.table.table-striped
			%thead
				%tr
					%th= model_class.human_attribute_name(:id)
					%th= model_class.human_attribute_name(:name)
					%th= model_class.human_attribute_name(:title)
					%th= model_class.human_attribute_name(:description)
					%th= model_class.human_attribute_name(:ispublic)
					%th= model_class.human_attribute_name(:moderator)
					%th= model_class.human_attribute_name(:created_at)
					%th=t '.actions', :default => t("helpers.actions")
			%tbody
				- @groups.each do |group|
					%tr
						%td= link_to group.id, group_path(group)
						%td= group.name
						%td= group.title
						%td= group.description
						%td= group.ispublic
						%td= group.moderator
						%td=l group.created_at
						%td
							= link_to t('.edit', :default => t("helpers.links.edit")), edit_group_path(group), :class => 'btn btn-mini'
							= link_to t('.destroy', :default => t("helpers.links.destroy")), group_path(group), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

		= link_to t('.new', :default => t("helpers.links.new")), new_group_path, :class => 'btn btn-primary'
