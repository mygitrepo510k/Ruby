.row.index-options-page
	.container
		- model_class = Option
		.page-header
			%h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
		%table.table.table-striped
			%thead
				%tr
					%th= model_class.human_attribute_name(:id)
					%th= model_class.human_attribute_name(:option_name)
					%th= model_class.human_attribute_name(:option_value)
					%th= model_class.human_attribute_name(:created_at)
					%th=t '.actions', :default => t("helpers.actions")
			%tbody
				- @options.each do |option|
					%tr
						%td= link_to option.id, option_path(option)
						%td= option.option_name
						%td= option.option_value
						%td=l option.created_at
						%td
							= link_to t('.edit', :default => t("helpers.links.edit")), edit_option_path(option), :class => 'btn btn-mini'
						/	= link_to t('.destroy', :default => t("helpers.links.destroy")), option_path(option), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
				%tr
					%td
					%td
					%td= will_paginate @options, :param_name => 'page_num'
					%td					

		= link_to t('.new', :default => t("helpers.links.new")), new_option_path, :class => 'btn btn-primary'

